header
  background #333
  color #fff
  padding 20px 10px
  position relative

.site-title
  font-size 20px
  text-align: center
  margin 0

.nav-toggle
  cursor pointer

a
  color #fff
  text-decoration none


nav li
  list-style none

.main-navigation
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  text-align: center
  background #222
  transform translateZ(0) translateX(-100%)
  transition all 250ms ease-in-out

  &.open
    transform translateZ(0) translateX(0)

  .nav-toggle
    position relative

.main-navigation ul
  padding 0

  a
    padding 10px 20px
    display block
    font-size: 1.5em

    &:hover
      background lighten(#333, 5%)


  .header
    font-size: 2.5em



.icon-menu
  font-size: 30px
  height 50px
  width @height
  line-height @height
  text-align: center
  position absolute
  top 14px

